<h1>Transactions for Account: <%= account.NAME %></h1>
    <h2>User: <%= user.NAME %></h2>
    <h2>Solde actuel: <%= account.AMOUNT %></h2>

    <h3>Transactions:</h3>
    <ul>
        <% transactions.forEach(transaction => { %>
            <li>
                <strong>Name:</strong> <%= transaction.NAME %>
                <strong>Amount:</strong> <%= transaction.AMOUNT %>
                <strong>Type:</strong> <%= transaction.TYPE === 1 ? "Entrée" : "Sortie" %>
                <strong>Created At:</strong> <%= transaction.CREATION_TS %>
            </li>
        <% }); %>
    </ul>

    <h3>Add New Transaction:</h3>
    <form action="/transactions" method="post">
        <input type="hidden" name="user_id" value="<%= user.ID %>">
        <input type="hidden" name="account_id" value="<%= account.ID %>">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="amount">Amount:</label>
            <input type="number" id="amount" name="amount" required>
        </div>
        <div>
            <label for="type">Type:</label>
            <select id="type" name="type" required>
                <option value="1">Entrée</option>
                <option value="0">Sortie</option>
            </select>
        </div>
        <div>
            <button type="submit">Add Transaction</button>
        </div>
    </form>


<form action="/accounts/<%= account.ID %>/exports" method="post">
    <button type="submit">Export Transactions to CSV</button>
  </form>

  <form action="/accounts/<%= account.ID %>/exports" method="get">
    <button type="submit">Download CSV Transactions</button>
  </form>
